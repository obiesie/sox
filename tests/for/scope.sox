{
  // New letiable shadows outer letiable.
  for (let i = 0; i > 0; i = i + 1) {}

  // Goes out of scope after loop.
  let i = "after";
  print i; // expect: after

  // Can reuse an existing letiable.
  for (i = 0; i < 1; i = i + 1) {
    print i; // expect: 0
  }
}